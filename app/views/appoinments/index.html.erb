<p id="notice"><%= notice %></p>

<h1>Appoinments</h1>
<%= link_to "sing out", destroy_user_session_path, method: :delete, class:"btn btn-outline-primary"%>
<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Service</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appoinments.each do |appoinment| %>
      <tr>
        <td><%= appoinment.day %></td>
        <td><%= appoinment.service %></td>
        <td><%= appoinment.user %></td>
        <td><%= link_to 'Show', appoinment %></td>
        <td><%= link_to 'Edit', edit_appoinment_path(appoinment) %></td>
        <td><%= link_to 'Destroy', appoinment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

