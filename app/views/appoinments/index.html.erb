<p id="notice"><%= notice %></p>

<h1>CITAS</h1>
<%=link_to "back", views_path %>
<%= link_to "sing out", destroy_user_session_path, method: :delete, class:"btn btn-outline-primary"%>
<table>
  <thead>
    <tr>
      <th>Dia</th>
      <th>Servicio</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.appoinments.each do |appoinment| %>
      <tr>
        <td><%= appoinment.day %></td>
        <td><%= appoinment.service.name %></td>
        <td><%= appoinment.user.name %></td>
        <td><%= link_to 'Show', appoinment %></td>
        <td><%= link_to 'Edit', edit_appoinment_path(appoinment) %></td>
        <td><%= link_to 'Destroy', appoinment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva cita', new_appoinment_path %>
